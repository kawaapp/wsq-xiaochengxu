/* pages/tmpl/video/kw-video.wxss */
.container {
  width: 100%;
  height: 60vw;
}

.cover {
  position: relative;
  z-index: 999; 
  width: 100%; 
  height: 60vw;
  background-color: rgba(0, 0, 0, .3);
  border-radius: 6rpx;
}

.snapshot {
  width: 100%;
  height: 60vw;
  border-radius: 6rpx;
}

.play {
  position: absolute;
  top: 175rpx;
  left:calc(50% - 50rpx);
  width: 100rpx;
  height: 100rpx;
}

.video {
  z-index: 998;
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

