/* pages/tmpl/goods/goods.wxss */
.ad_title {
  font-weight: 450;
  font-size: 36rpx;
  margin-bottom: 16rpx;
}

.ad_swiper {
  width: 100%;
  height: 54vw;
}

.ad_item {
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  overflow: hidden;
}

.ad_img {
  width: 100%;
}

.ad_link {
  background: #f8f8f8;  
  padding: 20rpx;
  font-size: 28rpx;
  color: #576b95;
  line-height: 32rpx;
  vertical-align: middle;
}

.ad_hint {
  font-size: 28rpx;
  color: #ccc;
  margin-top: 24rpx;
  margin-bottom: -8px;
  text-align: right;
}

.ad_l2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}