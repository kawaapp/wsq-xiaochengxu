/* pages/post/posts.wxss */
.h1 {
  margin-bottom: 16rpx;
  font-size: 48rpx;
  font-weight: bold;
}

.h2 {
  margin-bottom: 16rpx;
  font-size: 36rpx;
  font-weight: 450;
}


.rich-img {
  max-width: 100%;
  margin: 0px auto;
}

.comment {
  display: flex;
  align-items: top;
}

.menu {
  opacity: .7;
  margin-left: auto;
  width: 56rpx;
  height: 56rpx;
  align-self: start;
}

.comment .nickname {
  font-size: 28rpx;
  color:#222;
}

.comment .detail {
  font-size: 32rpx;
  color: #333;
}

.comment .image {
  width: 50vw;
  margin-top: 12px;
  border-radius: 6rpx;
}

.itemwrapper {
  margin-bottom: 16rpx;
}

.img {
  width: 100%;
  border-radius: 6rpx;
}

.video {
  width: 100%;
  border-radius: 6rpx;
}

.good_btn {
  font-size: 32rpx;
  color: #576b95;
}

.input_null{
  color: #C9C9C9;
}

.bottom-bar {
  border-top: 1rpx solid #f0f0f0;
  height: 112rpx;
  background-color: white;
  position: fixed;
  bottom: 0px;
  width: 100%;
  z-index: 997;
  display: flex;
  align-items: center;
}

.bottom-bar image {
  width: 54rpx;
  height: 54rpx;
}

.bottom-bar .left {
  display:flex;
  justify-content: center; 
  width: 120rpx;
}

.bottom-bar .middle {
  background-color:#f8f8f8;
  border-radius: 28rpx;
  padding: 14rpx 28rpx;
  flex: 1;
  font-size: 26rpx;
  color: #888888;
}

.bottom-bar .right {
  display:flex;
  justify-content: center; 
  align-items: center;
  width: 180rpx;
}

.share {
  margin-left: 20rpx;
}

.empty {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
}

.empty view {
  width: 100%;
  color: #C9C9C9;
  font-size: 32rpx;
  text-align: center;
}

.share-to {
  margin: 54rpx auto 24rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.share-to .tips {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 18rpx;
}

.share-to image {
  width: 42rpx;
  height: 42rpx;
  margin-left: 12rpx;
}

.share-to .btn {
  background: white;
  box-shadow:0px 0px 8rpx #ddd;
  border-radius: 38rpx;
  font-size: 30rpx;
  padding: 8rpx 24rpx;
}