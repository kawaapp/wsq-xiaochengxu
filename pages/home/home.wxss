
.brand {
  padding: 24rpx 18rpx;
  background-color: rgba(0, 0, 0, .3);
}

.logo {
  border: 6rpx solid white;
  border-radius: 16rpx;
  width: 144rpx;
  height: 144rpx;
}

.app-name {
  font-size: 32rpx;
  color: white; 
  font-weight:600;
}

.h-bottom {
  display: flex;
  align-items:flex-end;
}

.v-right {
  display: flex;
  flex-direction:column;
  align-items: flex-end;
}

.btn-normal {
  border: 1px solid white;
  border-radius: 14rpx;
  color: white;
}

.new-topic {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 128rpx;
  height: 128rpx;
}

.menu {
  margin-left: auto;
  width: 56rpx;
  height: 56rpx;
  align-self: flex-start;
}

.tab-h {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}
.tab-item.active {
  color: #20ACAB;
  position: relative;
}
.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 66rpx;
  background: #20ACAB;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}

.speaker {
  width: 720rpx;
  font-size: 28rpx;
}

.speaker image {
  width: 30rpx; 
  height: 30rpx;
  margin-right: 16rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}

.top-post {
  font-size: 28rpx;
}

.top-post .top {
  width: 30rpx;
  height: 30rpx;
  padding: 0 4rpx;
  vertical-align: middle;
  border-radius: 4rpx;
  text-align: center;
  font-size: 24rpx;
  color: white;
  background-color: red;
  margin-right: 16rpx;
  position: relative;
  top: -2rpx;
}
