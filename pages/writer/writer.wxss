/* pages/writer/writer.wxss */
.text-input {
 height: 200rpx;
 width: 100%;
 min-height: 200rpx;
 max-height: 300rpx;
 z-index: 998;
}

.btn-submit {
  width: 96%;
  color: #fff;
}

.btn-submit-hover {
  width: 96%;
  color: #fff;
  opacity: .6;
}

.btn-cancel {
  width: 96%;
  background-color: #f8f8f8;
  color:gray;
}

.btn-cancel-hover {
  width: 96%;
  background-color: lightgray;
  color:gray;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.thumb {
  width: 28vw;
  height: 28vw;
  margin: 6rpx;
}

.thumb image {
  width: 100%;
  height: 100%;
}

.thumb .del {
  position:absolute;
  margin-top: 0px;
  margin-left: 22vw;
  width: 42rpx;
  height: 42rpx;
  border-radius: 24rpx;
  background: rgba(0, 0, 0, .3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.thumb .del image {
  width: 28rpx;
  height: 28rpx;
}

.add {
  background: #f8f8f8;
  width: 28vw;
  height: 28vw;
  margin: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add image {
  width: 40%;
  height: 40%;
}

.tag-title {
  font-size: 32rpx;
  margin: 6rpx 0;
}

.tag-list {
  margin-left: -14rpx; 
  display: flex;
  flex-wrap: wrap;
}

.tag {
  border: 1px solid lightgray;
  border-radius: 2px;
  font-size: 32rpx;
  color: gray;
  padding: 6rpx 16rpx;
  margin: 6rpx 16rpx;
  word-break: keep-all;
}

.arrow_right {
  margin-left: auto;
  width: 48rpx; 
  height: 48rpx;
  min-width: 48rpx;
  max-width: 48rpx;
}

.video {
  width: 60vw;
  height: 60vw;
  z-index: 999;
}

.del {
  position:absolute;
  margin-top: -21rpx;
  margin-left: 429rpx;
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .3);
  z-index: 1000;
}

.del image {
  width: 100%;
  height: 100%;
}
